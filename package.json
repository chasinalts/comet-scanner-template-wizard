{
  "name": "comet-scanner-wizard-root",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev -p 5000",
    "build": "next build",
    "start": "next start -p 5000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:coverage:watch": "jest --coverage --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:unit": "jest --testPathPattern=src",
    "test:integration": "jest --testPathPattern=__tests__",
    "test:components": "jest --testPathPattern=components",
    "test:hooks": "jest --testPathPattern=hooks",
    "test:utils": "jest --testPathPattern=utils",
    "test:build": "npm run build && npm run test:ci",
    "test:all": "npm run type-check && npm run lint && npm run test:ci",
    "mcp:test": "node test-mcp-server.js",
    "mcp:start": "node mcp-server.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@google/generative-ai": "^0.21.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.48.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "15.1.0",
    "next": "15.1.0",
    "openai": "^4.67.0",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^4.1.8",
    "typescript": "^5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/webpack": "^5.28.5",
    "autoprefixer": "^10.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "netlify-cli": "^21.6.0",
    "supabase": "^2.24.3",
    "terser": "^5.41.0",
    "webpack": "^5.99.9"
  },
  "description": "COMET Scanner Template Wizard - Root package.json for convenience scripts"
}
